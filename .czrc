{
  "path": "cz-template",
  "config": {
    "cz-template": {
      "questions": [
        {
          "type": "list",
          "name": "scope",
          "message": "What is the scope of this change (e.g. component or file name)?",
          "choices": [
            {
              "name": "business logic related change",
              "value": "business"
            },
            {
              "name": "utilties and testing base helpers",
              "value": "infrastructure"
            },
            {
              "name": "document related changes, including separated README change",
              "value": "document"
            }
          ]
        },
        {
          "type": "input",
          "name": "issues",
          "message": "Add issue references (e.g. 'fix #123', 're #123'.):\n"
        }
      ],
      "types": [
        {
          "description": "Add new feature",
          "title": "feat",
          "name": "feat"
        },
        {
          "description": "A bug fix",
          "title": "fix",
          "name": "fix"
        },
        {
          "description": "An improvement to a current feature",
          "title": "improvement:",
          "name": "improvement:"
        },
        {
          "description": "Documentation only changes",
          "title": "docs",
          "name": "docs"
        },
        {
          "description": "Changes that do not affect the meaning of the code (white-space, formatting, missing semi-colons, etc)",
          "title": "style",
          "name": "style"
        },
        {
          "description": "A code change that neither fixes a bug nor adds a feature",
          "title": "refactor",
          "name": "refactor"
        },
        {
          "description": "A code change that improves performance",
          "title": "perf",
          "name": "perf"
        },
        {
          "description": "Adding missing tests or correcting existing tests",
          "title": "test",
          "name": "test"
        },
        {
          "description": "Changes that affect the build system or external dependencies (e.g. go.mod)",
          "title": "build",
          "name": "build"
        },
        {
          "description": "Changes to our CI configuration files and scripts (example scopes: Travis, Circle, BrowserStack, SauceLabs)",
          "title": "ci",
          "name": "ci"
        },
        {
          "description": "Other changes that don't modify src or test files",
          "title": "chore",
          "name": "chore"
        },
        {
          "description": "Reverts a previous commit",
          "title": "revert",
          "name": "revert"
        }
      ],
      "formula": "${name}${scope}: ${subject}"
    }
  }
}
